@model SaveManagerViewModel
@{
  Layout = "_MenyLayout";
}
<h2>Detaljer för ärendet</h2>
<p class="info">Du är inloggad som avdelningschef</p>

@await Component.InvokeAsync("ShowOneCrime", ViewBag.errandId)

<section id="bottomColumn">
  <form asp-controller="Manager" asp-action="SaveManager" method="post">
    <p>
      <h3>Redigera ärende</h3>
      <label asp-for="EmployeeId"></label>
      <select asp-for="EmployeeId" asp-items="@(new SelectList(ViewBag.ListOfEmployee, "EmployeeId", "EmployeeName"))">
        <option>Välj</option>
      </select>
    </p>
    <p>
      <input asp-for="NoAction" type="checkbox" />
      <label asp-for="NoAction"></label>
      <input asp-for="InvestigatorInfo" placeholder="Ange motivering" />
    </p>
    <input class="button" type="submit" value="Spara">
  </form>
</section>