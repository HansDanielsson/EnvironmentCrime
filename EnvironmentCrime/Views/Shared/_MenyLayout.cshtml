    {
      <li><a asp-controller="Coordinator" asp-action="ReportCrime" class="reportAdd">Rapportera brott</a></li>
    }
    <li class="right"><a asp-controller="Account" asp-action="Logout" class="logout">Logga ut</a></li>
  </ul>
</nav><!-- End Nav -->
