@model ErrandInfo

<h3>Ärende: @Model.Errands.RefNumber</h3>

<!--Nedan ser man en lista på ärenden-->
<section id="leftColumn">
  <h3>Anmälan</h3>
  <div>
    <span class="label">Typ av brott: </span><br />
    @Model.Errands.TypeOfCrime
  </div>
  <br />
  <div>
    <span class="label">Brottsplats: </span><br />
    @Model.Errands.Place
  </div>
  <div>
    <span class="label">Brottsdatum: </span><br />
    @Model.Errands.DateOfObservation.ToString("yyyy-MM-dd")
  </div>
  <br />
  <div>
    <span class="label">Anmälare: </span><br />
    @Model.Errands.InformerName
  </div>
  <br />
  <div>
    <span class="label">Telefon: </span><br />
    @Model.Errands.InformerPhone
  </div>
  <br />
  <div>
    <span class="label">Observationer:</span><br />
    @Model.Errands.Observation
  </div>
</section>

<section id="rightColumn">
  <h3>Utredning</h3>
  <div>
    <span class="label">Status:</span><br />
    @Model.StatusName
  </div>
  <br />
  <div>
    <span class="label">Ansvarig avdelning:</span><br />
    @Model.DepartmentName
  </div>
  <br />
  <div>
    <span class="label">Handläggare:</span><br />
    @Model.EmployeeName
  </div>
  <br />
  <div>
    <span class="label">Ytterligare information:</span><br />
    @Model.Errands.InvestigatorInfo
  </div>
  <br />
  <div>
    <span class="label">Händelser:</span><br />
    @Model.Errands.InvestigatorAction
  </div>
  <br />
  @if (Model.Errands.Samples != null && Model.Errands.Samples.Any())
  {
    <div>
      <span class="label">Provtagning:</span><br />
      <ul>
        @foreach (var sample in Model.Errands.Samples)
        {
          <li>
            <a href="~/sample/@sample.SampleName">@sample.SampleName!.Split('_')[1]</a>
          </li>
        }
      </ul>
    </div>
  }
  @if (Model.Errands.Pictures != null && Model.Errands.Pictures.Any())
  {
    <div>
      <span class="label">Bilder:</span><br />
      <ul>
        @foreach (var picture in Model.Errands.Pictures)
        {
          <img src="~/picture/@picture.PictureName" alt="klicka på bilden">
        }
      </ul>
    </div>
  }
</section>