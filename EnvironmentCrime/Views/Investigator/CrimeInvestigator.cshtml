@model SaveInvestigatorViewModel
@{
  Layout = "_MenyLayout";
}
<h2>Detaljer för ärendet</h2>
<p class="info">Du är inloggad som handläggare</p>

@await Component.InvokeAsync("ShowOneCrime", ViewBag.errandId)

<section id="bottomColumn">
  <h3>Redigera ärende</h3>
  <form asp-controller="Investigator" asp-action="SaveInvestigator" method="post" enctype="multipart/form-data" multiple>
    <label asp-for="InvestigatorInfo" class="label">Ytterligare information:</label>
    <br /><br />
    <textarea asp-for="InvestigatorInfo" rows="5" cols="60"></textarea>
    <br /><br />
    <label asp-for="InvestigatorAction" class="label">Händelser:</label>
    <br /><br />
    <textarea asp-for="InvestigatorAction" rows="5" cols="60"></textarea>
    <br /><br />
    <label asp-for="Sample" class="label">Prover:</label>
    <br /><br />
    <input asp-for="Sample" type="file">
    <br /><br />
    <label asp-for="Picture" class="label">Ladda upp bilder:</label>
    <br /><br />
    <input asp-for="Picture" type="file">
    <br /><br />
    <label asp-for="StatusId" class="label">Ändring av status:</label>
    <br /><br />
    <select asp-for="StatusId" asp-items="Model.ErrandStatus">
      <option value="">Välj</option>
    </select>
    <p><input class="button" type="submit" value="Spara"></p>
  </form>
</section>